{
  "parser": "babel-eslint",
  "extends": ["eslint-config-airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "no-underscore-dangle": 0,
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-const": 0,
    "arrow-body-style": 0,
    "eqeqeq":0,
    "quotes": [2, "single"],
    "no-param-reassign": 0,
    "no-return-assign": 0,
    "max-len": 0,
    "consistent-return": 0,
    "indent": [2, 4, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "key-spacing": [2, {
      "singleLine": {
          "beforeColon": false,
          "afterColon": true
      },
      "multiLine": {
          "beforeColon": false,
          "afterColon": true,
          "align": "colon"
      }
    }],
    "computed-property-spacing": [2, "never"],
    "array-bracket-spacing": [2, "always"],
    "semi": [2, "never"],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "no-confusing-arrow": [2, {"allowParens": true}]
  }
}